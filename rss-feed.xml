<?xml version="1.0" encoding="UTF-8"?>
<rss version="2.0" xmlns:atom="http://www.w3.org/2005/Atom" xmlns:dc="http://purl.org/dc/elements/1.1/">
    <channel>
        <title>{{ site.title | xml_escape }}</title>
        <description>{% if site.description %}{{ site.description | xml_escape }}{% endif %}</description>
        <link>{{ site.github.url }}</link>
        <atom:link href="{{ site.github.url }}/{{ page.path }}" rel="self" type="application/rss+xml" />
                
        {% for post in site.posts limit:10 %}
                {% assign post_date = post.date | date: '%Y-%m-%d' %}
                {% assign last_updated = post.last_updated | date: '%Y-%m-%d' %}
                {% assign feed_link = site.url | append: post.url %}
                {% if post.substack_url %}
                    {% assign feed_link = post.substack_url %}
                {% elsif post.redirect_to %}
                    {% assign redirect_target = post.redirect_to | first %}
                    {% if redirect_target contains 'http' %}
                        {% assign feed_link = redirect_target %}
                    {% endif %}
                {% endif %}
            <item>
                <title>
                    {% if last_updated != post_date %}[UPDATED] {% endif %}{{ post.title | xml_escape }}
                </title>
                {% if post.author %}
                    <dc:creator>{{ post.author | xml_escape }}</dc:creator>
                {% endif %}
                {% if post.excerpt %}
                    <description>{{ post.excerpt | xml_escape }} [More...]</description>
                {% else %}
                    <description>{{ post.content | xml_escape }}</description>
                {% endif %}
                <pubDate>
                        {{ post.last_updated | date_to_rfc822 }}
                </pubDate>
                <link>{{ feed_link }}</link>
                <guid isPermaLink="true">{{ feed_link }}</guid>
            </item>
        {% endfor %}
    </channel>
</rss>
